<p style="font-weight: bold; margin-bottom: 20px;">Please respond to the invite:</p>
<%= form_with model: [@user, invite, @response] do |form| %>
    <div class="form-group">
        <%= form.label :message, "Your Response Message:" %>
        <%= form.text_area :message, class: "form-control", rows: 4, placeholder: "Enter your response here..." %>
    </div>

    <div class="form-group mt-3">
        <p>Would you like to accept the invite?</p>
        <%= form.submit "Yes", name: 'response_value', value: 'yes', class: 'btn btn-success me-2' %>
        <%= form.submit "No", name: 'response_value', value: 'no', class: 'btn btn-danger' %>
    </div>

    <%= hidden_field_tag :selected_invite, invite.id %>
<% end %>
