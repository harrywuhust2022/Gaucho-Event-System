<div style="display: flex; justify-content: center; margin-top: 50px;">
  <%= form_with model: [@user, @event] do |form| %>
    <div style="border: 1px solid grey; padding: 20px; border-radius: 10px; width: 600px;">
      <h3 style="font-weight: bold; margin-bottom: 20px; text-align: center;">Create New Event</h3>

      <div class="form-group" style="margin-bottom: 15px;">
        <%= form.label :title, "Event Title:" %><br>
        <%= form.text_field :title, class: "form-control", rows: 4, cols: 40 %>
        <% @event.errors.full_messages_for(:title).each do |message| %>
          <div class="alert alert-danger" role="alert">
            <%= message %>
          </div>
        <% end %>
      </div>

      <div class="form-group" style="margin-bottom: 15px;">
        <%= form.label :content, "Event Content:" %><br>
        <%= form.text_area :content, class: "form-control", rows: 10, cols: 40 %>
        <% @event.errors.full_messages_for(:content).each do |message| %>
          <div class="alert alert-danger" role="alert">
            <%= message %>
          </div>
        <% end %>
      </div>

      <div class="d-flex justify-content-between" style="margin-bottom: 15px;">
        <%= form.submit "Create Event", class: "btn btn-primary" %>
        <%= link_to "Back", @user, class: "btn btn-secondary" %>
      </div>
    </div>
  <% end %>
</div>
